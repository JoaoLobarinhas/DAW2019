extends layout

block content
  .w3-container.w3-blue
    h1 Insert a New Movie:
    br
  .w3-container.w3-center
    .w3-card-4.w3-left-align(style={width:'70%',margin:'auto'})
      form.w3-margin(action="/insertMovie" method='POST')
        br
        label.w3-margin 
          b Title:
        input.w3-margin.w3-input(type="text" name="title" id="title")
        label.w3-margin 
          b Release Year:
        input.w3-margin.w3-input(type="text" name="year" id="year")
        label.w3-margin 
          b Cast:
        input.w3-margin.w3-input(type="text" name="cast" id="cast")
        label.w3-margin 
          b Genres
        input.w3-margin.w3-input(type="text" name="genres" id="genres")
        input.w3-margin.w3-btn.w3-dark-grey(type="submit" value="Insert Movie")
        br
        
